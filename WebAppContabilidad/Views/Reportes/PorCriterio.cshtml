@model IEnumerable<WebAppContabilidad.Models.Asiento>

@{
    ViewData["Title"] = "Por Criterio";
}

<h1>Por Criterio</h1>
<div class="input-group mb-3">
    <input id="myInput" class="form-control" onkeyup="myFunction()"  placeholder="Filtrar por criterio..." />
</div>

<table class="table" id="myTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CatalogoAuxiliar)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Monedas)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CatalogoAuxiliar.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Monedas.Codigo)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
